
usr=`whoami`
#usr=`finger $usr | grep Name | sed 's/Name: /@/g' | cut -f2 -d@ | cut -f1 -d" "`

cmdfile=/home/`whoami`/.cbuwrapper/cbuwrapper_fsl_tmp
ncmd=`cat $cmdfile | wc -l`
fslver=`head -1 $cmdfile`

# print a welcome message...

echo "****************************"
echo "Hello "$usr", welcome to"
echo "  ____  ___  _"
echo " (  __)/ __)| |"
echo "  )___)\__ \| |_"
echo " (__)  (___/|___)"
echo "****************************"
echo "You are using:"
echo "FSL version: "$fslver
echo "On machine:  "`hostname`
echo "****************************"
sleep 1

# set FSL environment variables
FSLDIR='/imaging/local/software/fsl/'$fslver'/'`arch`'/fsl'
export FSLDIR

# set Free Surfer environment variables
export SUBJECTS_DIR=/imaging/mc04/fm03/fs_subjects
export FREESURFER_HOME=/imaging/local/software/freesurfer/latest/x86_64

export FSLOUTPUTTYPE=NIFTI_GZ

export PS1="[\u@\H]$ "

# set paths

PATH=/hpc-software/fsl:$FSLDIR/bin:${FREESURFER_HOME}/bin:$PATH
export PATH
source ${FSLDIR}/etc/fslconf/fsl.sh


# run any commands
ncmd=`expr $ncmd - 1`
cmds=`tail -$ncmd $cmdfile`

rm -f $cmdfile
$cmds

